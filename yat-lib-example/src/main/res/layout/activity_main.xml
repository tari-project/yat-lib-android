<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yat_lib_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="64dp" />

        <TextView
            android:id="@+id/search_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yat_lib_dark_gray" />

    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/test_incoming_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="6dp"
            android:layout_weight="1"
            android:text="Test incoming" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/test_outcoming_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="6dp"
            android:layout_weight="1"
            android:text="Test outcoming" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:id="@+id/yat_content_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/congratulations"
            android:textColor="@color/yat_lib_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/yat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/yat_text_view_bg"
            android:elevation="4dp"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:paddingHorizontal="20dp"
            android:textColor="@color/yat_lib_black"
            android:textSize="36sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/is_now_yours"
            android:textColor="@color/yat_lib_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/yat_records_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/yat_records"
            android:textColor="@color/yat_lib_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/yat_records_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/yat_lib_black"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/get_a_yat_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        android:background="?colorPrimary"
        android:text="@string/get_a_yat"
        android:textAllCaps="false"
        android:textColor="@color/yat_lib_white"
        android:textSize="16sp" />

</LinearLayout>